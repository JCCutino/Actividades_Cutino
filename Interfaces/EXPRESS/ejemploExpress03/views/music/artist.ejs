<%- include("../template/header", {titulo: 'Panel de Admin'}) %>

<div class="container">

  <h1 class="mt-3">Artistas de Música</h1>

  <% if (arrayArtist.length > 0) { %>
    <% arrayArtist.forEach((artist, index) => { %>
      <div class="row mt-3<%= index % 2 === 0 ? ' flex-row-reverse' : '' %>">
        <div class="col-md-6">
          <h2><%= artist.name %></h2>
          <img src="images/artist/<%= artist.image %>" class="img-fluid mb-3" alt="Imagen del artista <%= artist.name %>">
        </div>
        <div class="col-md-6">
          <p><strong>Género:</strong> <%= artist.genre %></p>
          <p><strong>Biografía:</strong> <%= artist.biography %></p>
        </div>
      </div>
      <hr>
    <% }) %>
  <% } else { %>
    <p>No hay artistas disponibles</p>
  <% } %>

</div>

<%- include("../template/footer.ejs") %>
